# Configuration Xarala Solutions
# Copiez ce fichier vers .env.local et remplissez les valeurs

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# URL de votre projet Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here

# Clé publique Supabase (anonyme)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Clé de service Supabase (pour les opérations côté serveur)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# AUTHENTIFICATION
# ===========================================
# URL de redirection après connexion
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# URL de redirection pour les emails de confirmation
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/fr/auth/callback

# ===========================================
# INTERNATIONALISATION
# ===========================================
# Langue par défaut (fr, en, wo)
NEXT_PUBLIC_DEFAULT_LOCALE=fr

# Langues supportées (séparées par des virgules)
NEXT_PUBLIC_SUPPORTED_LOCALES=fr,en,wo

# ===========================================
# PAIEMENTS
# ===========================================
# Stripe (optionnel)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Orange Money WebPay
ORANGE_MONEY_API_KEY=your_orange_money_api_key
ORANGE_MONEY_MERCHANT_ID=your_orange_money_merchant_id
ORANGE_MONEY_SIGNATURE_SECRET=your_orange_money_signature_secret

# Wave Money
WAVE_API_KEY=your_wave_api_key
WAVE_SECRET=your_wave_secret
WAVE_API_URL=https://api.wave.com/v1

# PayPal (optionnel)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# ===========================================
# EMAIL
# ===========================================
# Resend (recommandé pour l'envoi d'emails)
RESEND_API_KEY=re_your_resend_api_key_here

# SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===========================================
# STOCKAGE DE FICHIERS
# ===========================================
# Supabase Storage (recommandé)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=xarala-assets

# Cloudinary (pour stockage d'images)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# GÉNÉRATION D'IMAGES IA
# ===========================================
# Replicate API (pour génération d'images avec IA)
REPLICATE_API_TOKEN=r8_your_replicate_api_token_here

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (pour le monitoring d'erreurs)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# ===========================================
# DÉVELOPPEMENT
# ===========================================
# Mode de développement
NODE_ENV=development

# URL de base pour le développement
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Debug mode (true/false)
NEXT_PUBLIC_DEBUG=false

# ===========================================
# SÉCURITÉ
# ===========================================
# Clé secrète pour les JWT et sessions
NEXTAUTH_SECRET=your_nextauth_secret_here

# Clé pour le chiffrement des données sensibles
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===========================================
# INTÉGRATIONS TIERCES
# ===========================================
# WhatsApp Business API (optionnel)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id_here

# Twilio (pour SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number
TWILIO_WHATSAPP_NUMBER=whatsapp:+221770000000

# Webhooks externes
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/xxxxxxx/xxxxxxx

# ===========================================
# CONFIGURATION SPÉCIFIQUE XARALA
# ===========================================
# Nom de l'entreprise
NEXT_PUBLIC_COMPANY_NAME=Xarala Solutions

# Description de l'entreprise
NEXT_PUBLIC_COMPANY_DESCRIPTION=Plateforme e-commerce B2B sénégalaise

# Adresse de l'entreprise
NEXT_PUBLIC_COMPANY_ADDRESS=Dakar, Sénégal

# Téléphone de l'entreprise
NEXT_PUBLIC_COMPANY_PHONE=+221 XX XXX XX XX

# Email de l'entreprise
NEXT_PUBLIC_COMPANY_EMAIL=contact@xarala.sn

# Site web de l'entreprise
NEXT_PUBLIC_COMPANY_WEBSITE=https://xarala.sn

# ===========================================
# CONFIGURATION E-COMMERCE
# ===========================================
# Devise par défaut
NEXT_PUBLIC_DEFAULT_CURRENCY=XOF

# Taux de TVA par défaut (en pourcentage)
NEXT_PUBLIC_DEFAULT_TAX_RATE=18

# Frais de livraison par défaut
NEXT_PUBLIC_DEFAULT_SHIPPING_COST=2000

# Montant minimum de commande
NEXT_PUBLIC_MIN_ORDER_AMOUNT=5000

# ===========================================
# CONFIGURATION CARTES VIRTUELLES
# ===========================================
# Taille par défaut des cartes (en pixels)
NEXT_PUBLIC_CARD_WIDTH=400
NEXT_PUBLIC_CARD_HEIGHT=250

# Formats de carte supportés
NEXT_PUBLIC_SUPPORTED_CARD_FORMATS=png,jpg,jpeg,svg

# Qualité d'export par défaut
NEXT_PUBLIC_CARD_EXPORT_QUALITY=0.9

# ===========================================
# CONFIGURATION QR CODES
# ===========================================
# Taille par défaut des QR codes
NEXT_PUBLIC_QR_CODE_SIZE=200

# Couleur par défaut des QR codes
NEXT_PUBLIC_QR_CODE_COLOR=#000000

# Couleur de fond par défaut des QR codes
NEXT_PUBLIC_QR_CODE_BACKGROUND=#FFFFFF

# ===========================================
# CONFIGURATION NFC
# ===========================================
# Type de données NFC par défaut
NEXT_PUBLIC_NFC_DEFAULT_TYPE=text/plain

# Encodage par défaut
NEXT_PUBLIC_NFC_DEFAULT_ENCODING=utf-8

# ===========================================
# NOTES IMPORTANTES
# ===========================================
# 1. Ne jamais commiter le fichier .env.local
# 2. Toutes les variables NEXT_PUBLIC_* sont exposées côté client
# 3. Les variables sans préfixe sont uniquement côté serveur
# 4. Redémarrez le serveur après modification des variables d'environnement
# 5. Vérifiez que toutes les clés sont correctement configurées avant le déploiement
